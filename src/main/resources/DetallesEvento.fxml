<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unieventos.controller.DetallesEventoController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="nombreLabel" text="Nombre del Evento"/>
    <Label fx:id="descripcionLabel" text="Descripción del Evento"/>
    <Label fx:id="fechaLabel" text="Fecha del Evento"/>
    <Label fx:id="ciudadLabel" text="Ciudad"/>
    <Label fx:id="direccionLabel" text="Dirección"/>
    <Button text="Comprar Boletos" onAction="#comprarBoletos"/>
</VBox>
